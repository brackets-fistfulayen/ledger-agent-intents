{
  "$schema": "https://live-app-catalog.ledger.com/schema.json",
  "id": "agent-intents",
  "name": "Agent Intents",
  "url": "http://localhost:3000",
  "homepageUrl": "https://github.com/fistfulayen/ledger-agent-intents",
  "icon": "",
  "platforms": ["desktop", "mobile"],
  "apiVersion": "2.0.0",
  "manifestVersion": "2",
  "branch": "stable",
  "categories": ["tools"],
  "currencies": ["ethereum", "polygon"],
  "content": {
    "shortDescription": "Review and sign transactions proposed by AI agents",
    "description": "Agent Intents provides a secure bridge between AI agents and your Ledger device. Your agents can propose transactions, but only YOU can sign them on trusted hardware."
  },
  "permissions": [
    "account.request",
    "account.list",
    "transaction.sign",
    "transaction.signAndBroadcast"
  ],
  "domains": ["http://localhost:*", "https://*.vercel.app"]
}
